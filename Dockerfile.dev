FROM python:3.11-slim

WORKDIR /app

# Installer les dépendances système et outils de développement
RUN apt-get update && apt-get install -y \
    gcc \
    g++ \
    curl \
    git \
    vim \
    && rm -rf /var/lib/apt/lists/*

# Copier les requirements et installer les dépendances Python
COPY requirements.txt .
RUN pip install --no-cache-dir --timeout 300 --retries 3 --index-url https://pypi.org/simple/ --trusted-host pypi.org --trusted-host pypi.python.org --trusted-host files.pythonhosted.org -r requirements.txt

# Installer des outils de développement supplémentaires
RUN pip install --no-cache-dir --timeout 300 --retries 3 \
    pytest \
    pytest-asyncio \
    black \
    flake8 \
    mypy \
    ipython

# Créer les dossiers nécessaires
RUN mkdir -p /app/data/cgi_documents /app/vector_db /app/logs

# Copier le code de l'application
COPY . .

# Créer un utilisateur non-root pour la sécurité
RUN useradd --create-home --shell /bin/bash app && \
    chown -R app:app /app
USER app

# Exposer le port
EXPOSE 8000

# Commande de démarrage avec hot-reload
CMD ["uvicorn", "app.main:app", "--host", "0.0.0.0", "--port", "8000", "--reload", "--log-level", "debug"]